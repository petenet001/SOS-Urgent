<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:padding="10dp"
    app:theme="@style/Base.AlertDialog.AppCompat">
    <TextView
        android:id="@+id/about_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="@string/action_about" />


        <ImageView
            android:id="@+id/logo_about"
            android:src="@drawable/soslogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="start"
            />

        <View
            android:layout_marginTop="10dp"
            android:id="@+id/separateur"
            android:layout_below="@id/logo_about"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"/>

        <RelativeLayout
            android:layout_marginTop="18dp"
            android:layout_below="@+id/separateur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/about_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="4dp"
                android:textColor="#d4d4d4"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:textAlignment="center"
                android:text="@string/about_text" />
        </RelativeLayout>

</RelativeLayout>